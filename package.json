{
  "name": "sneedex-indexer",
  "version": "1.0.0",
  "description": "Newznab/torznab indexer for the Sneedex",
  "author": "Turbo",
  "license": "MIT",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "nodemon",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "bun run lint --fix && prettier --write src/",
    "docker": "docker-compose -f \"docker-compose.yml\" up -d --build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TurboCheetah/sneedex-indexer.git"
  },
  "bugs": {
    "url": "https://github.com/TurboCheetah/sneedex-indexer/issues"
  },
  "homepage": "https://github.com/TurboCheetah/sneedex-indexer#readme",
  "dependencies": {
    "hono": "2.5.6",
    "typescript": "4.9.3"
  },
  "devDependencies": {
    "@types/eslint": "8.4.10",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "@typescript-eslint/parser": "5.44.0",
    "bun-types": "0.2.2",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.2",
    "lint-staged": "13.0.4",
    "nodemon": "2.0.20",
    "prettier": "2.8.0"
  },
  "lint-staged": {
    "src/*.ts": [
      "bun run lint:fix"
    ]
  }
}